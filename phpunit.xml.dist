<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="test/unit/bootstrap.php" colors="true" strict="true">
	<testsuites>
		<testsuite name="toollabs-base Test Suite">
			<directory>test/unit/suites/</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>
</phpunit>
